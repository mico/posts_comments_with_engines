<p id="notice"><%= notice %></p>

<h1>Model With Comments</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Commentable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @model_with_comments.each do |model_with_comment| %>
      <tr>
        <td><%= model_with_comment.text %></td>
        <td><%= model_with_comment.commentable %></td>
        <td><%= link_to 'Show', model_with_comment %></td>
        <td><%= link_to 'Edit', edit_model_with_comment_path(model_with_comment) %></td>
        <td><%= link_to 'Destroy', model_with_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

